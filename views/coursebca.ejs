<%- include("header.ejs") %>

<!-- Registration Hero (theme-matching, no images) -->
<section class="registration-hero">
  <div class="container">
    <div class="row align-items-center">
      <!-- Left: Intro text -->
      <div class="col-lg-6 mb-4 mb-lg-0">
        <h1 class="fw-bold mb-2 text-white">BCA Registration</h1>
        <p class="text-light mb-3">
          Apply for the BCA programme. Fill the form and we will process your application.
          You can track status on <strong>My Applications</strong> once submitted.
        </p>

        <ul class="list-unstyled text-light small">
          <li class="mb-2"><i class="fa-solid fa-check me-2 text-warning"></i>Easy online submission</li>
          <li class="mb-2"><i class="fa-solid fa-check me-2 text-warning"></i>Secure data & authentication</li>
          <li class="mb-2"><i class="fa-solid fa-check me-2 text-warning"></i>Fast tracking of application status</li>
        </ul>

        <div class="mt-3">
          <a href="/display" class="btn btn-light me-2">My Applications</a>
          <a href="/dashboard" class="btn btn-outline-light">Back to Dashboard</a>
        </div>
      </div>

      <!-- Right: Form card -->
      <div class="col-lg-6">
        <div class="card registration-card shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-3 fw-semibold">Register for BCA</h5>

            <form action="/register/bca" method="post" novalidate>
              <div class="mb-3">
                <label class="form-label small">Full name</label>
                <input required type="text" name="name" value="<%= user && user.name ? user.name : '' %>" class="form-control" placeholder="Enter your full name">
              </div>

              <div class="mb-3">
                <label class="form-label small">Email</label>
                <input required type="email" name="email" class="form-control" placeholder="Enter email address">
              </div>

              <div class="mb-3">
                <label class="form-label small">Mobile number</label>
                <input required type="tel" name="number" class="form-control" placeholder="Enter mobile number">
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label small">D.O.B</label>
                  <input type="date" name="dob" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label small">Gender</label>
                  <select name="gender" class="form-select" required>
                    <option value="">Select</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label small">Address</label>
                <textarea required name="address" rows="2" class="form-control" placeholder="Enter address"></textarea>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label small">College</label>
                  <select name="college" class="form-select" required>
                    <option value="">Select college</option>
                    <option>MITS</option>
                    <option>RJIT</option>
                    <option>ITM</option>
                    <option>NITM</option>
                  </select>
                </div>

                <div class="col-md-6 mb-3">
                  <label class="form-label small">Branch</label>
                  <select name="branch" class="form-select" required>
                    <option value="">Select branch</option>
                    <option>Computer Applications</option>
                    <option>IT</option>
                    <option>Software</option>
                  </select>
                </div>
              </div>

              <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary">Submit Application</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("footer.ejs") %>
