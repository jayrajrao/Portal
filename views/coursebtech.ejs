<%- include("header.ejs") %>

<!-- Registration Hero (theme-matching, no large images) -->
<section class="registration-hero">
  <div class="container">
    <div class="row align-items-center">
      <!-- Left: Intro text -->
      <div class="col-lg-6 mb-4 mb-lg-0">
        <h1 class="fw-bold mb-2 text-white">B.Tech Registration</h1>
        <p class="text-light mb-3">
          Apply for the B.Tech programme. Complete the form below â€” you'll be able to track
          the status from <strong>My Applications</strong> once submitted.
        </p>

        <ul class="list-unstyled text-light small">
          <li class="mb-2"><i class="fa-solid fa-check me-2 text-warning"></i>Online application in minutes</li>
          <li class="mb-2"><i class="fa-solid fa-check me-2 text-warning"></i>Secure & authenticated</li>
          <li class="mb-2"><i class="fa-solid fa-check me-2 text-warning"></i>Transparent status tracking</li>
        </ul>

        <div class="mt-3">
          <a href="/display" class="btn btn-light me-2">My Applications</a>
          <a href="/dashboard" class="btn btn-outline-light">Back to Dashboard</a>
        </div>
      </div>

      <!-- Right: Form card -->
      <div class="col-lg-6">
        <div class="card registration-card shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-3 fw-semibold">Register for B.Tech</h5>

            <form action="/register/btech" method="post" novalidate>
              <div class="mb-3">
                <label class="form-label small">Full name</label>
                <input required type="text" name="name" value="<%= user && user.name ? user.name : '' %>" class="form-control" placeholder="Enter your full name">
              </div>

              <div class="mb-3">
                <label class="form-label small">Email</label>
                <input required type="email" name="email" class="form-control" placeholder="Enter email address">
              </div>

              <div class="mb-3">
                <label class="form-label small">Mobile number</label>
                <input required type="tel" name="number" class="form-control" placeholder="Enter mobile number">
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label small">D.O.B</label>
                  <input type="date" name="dob" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label small">Gender</label>
                  <select name="gender" class="form-select" required>
                    <option value="">Select</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label small">Address</label>
                <textarea required name="address" rows="2" class="form-control" placeholder="Enter address"></textarea>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label small">College</label>
                  <select name="college" class="form-select" required>
                    <option value="">Select college</option>
                    <option>MITS</option>
                    <option>RJIT</option>
                    <option>ITM</option>
                    <option>NITM</option>
                  </select>
                </div>

                <div class="col-md-6 mb-3">
                  <label class="form-label small">Branch</label>
                  <select name="branch" class="form-select" required>
                    <option value="">Select branch</option>
                    <option>CSE</option>
                    <option>IT</option>
                    <option>EC</option>
                    <option>ET</option>
                    <option>ME</option>
                    <option>EE</option>
                  </select>
                </div>
              </div>

              <!-- course field: if your Application schema expects an ObjectId ref to course,
                   set it accordingly in controller; otherwise post a string 'B.Tech' -->
              <input type="hidden" name="course" value="B.Tech">

              <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary">Submit Application</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("footer.ejs") %>
