<section style="background-color: #12587a;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;">
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 text-black">

                  <div class="d-flex align-items-center pb-1">
                    <img src="/assets/images/logo.png" class="register_logo" width="120px" height="120px" alt="....">
                  </div>
                  <h5 class="text-center regs_heading mb-3 pb-3">Login</h5>
                  <% if(message.length> 0){ %>
                    <div class="alert alert-success">
                        <%=message %>
                    </div>
                <% } %>
                  
                    
               
                  <form action="/verify_login" method="post" class="pt-4">
                    <div class="form-group mb-4">
                        <input type="text" name="email" class="form-control form-control-lg" placeholder="Email">
                    </div>
                    <div class="form-group mb-5">
                        <input type="password" name="password" class="form-control form-control-lg" placeholder="Password">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-lg btn-block" style="background: #12587a; color:#ffff;">Log In</button>
                        <br>
                        <div class="mt-4">
                            <span class=" mb-5 pb-lg-2">DON`T HAVE AN ACCOUNT?</span>
                            <a href="/register" style="color: #393f81;">REGISTER NOW</a>
                            <br>
                            <a href="/forgot-password" style="color: #393f81;" class="pt-3">FORGOT PASSWORD</a>
                        </div>
                    </div>
                </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
