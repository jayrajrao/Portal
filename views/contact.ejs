<!-- Contact Content -->
<section class="py-5 contact-section">
  <div class="container">
    <div class="row g-4">
      <!-- Contact info -->
      <div class="col-lg-5">
        <div class="contact-info-card shadow-sm">
          <h4 class="fw-bold mb-3">Get in touch</h4>
          <p class="text-muted small mb-3">
            If you have any questions about course selection, application status
            or eligibility, feel free to write to us or call the helpdesk.
          </p>

          <div class="mb-3">
            <h6 class="fw-semibold mb-1">
              <i class="fa-solid fa-location-dot me-2 text-danger"></i>
              Campus Address
            </h6>
            <p class="text-muted small mb-0">
              Gole ka Mandir, Station Road<br>
              Gwalior, Madhya Pradesh, India
            </p>
          </div>

          <div class="mb-3">
            <h6 class="fw-semibold mb-1">
              <i class="fa-solid fa-envelope me-2 text-primary"></i>
              Email
            </h6>
            <p class="text-muted small mb-0">
              admissions@example.edu<br>
              support@example.edu
            </p>
          </div>

          <div class="mb-3">
            <h6 class="fw-semibold mb-1">
              <i class="fa-solid fa-phone me-2 text-success"></i>
              Phone
            </h6>
            <p class="text-muted small mb-0">
              +91 8269543853<br>
              
            </p>
          </div>

          <div class="mb-0">
            <h6 class="fw-semibold mb-1">
              <i class="fa-solid fa-clock me-2 text-warning"></i>
              Office hours
            </h6>
            <p class="text-muted small mb-0">
              Monday – Saturday: 9:00 AM – 6:00 PM<br>
              Sunday: Closed
            </p>
          </div>
        </div>
      </div>

      <!-- Contact form -->
      <div class="col-lg-7">
        <div class="contact-form-card shadow-sm">
          <h4 class="fw-bold mb-3">Send us a message</h4>
          <p class="text-muted small mb-4">
            Fill in the form below and our team will get back to you at the earliest.
          </p>

          <!-- You can later wire this POST to a route like /contact -->
          <form action="/contact" method="post">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label small fw-semibold">Full Name</label>
                <input type="text" name="name" class="form-control form-control-sm" placeholder="Enter your name" required>
              </div>

              <div class="col-md-6">
                <label class="form-label small fw-semibold">Email</label>
                <input type="email" name="email" class="form-control form-control-sm" placeholder="Enter your email" required>
              </div>

              <div class="col-md-6">
                <label class="form-label small fw-semibold">Mobile Number</label>
                <input type="text" name="phone" class="form-control form-control-sm" placeholder="Enter your number" required>
              </div>

              <div class="col-md-6">
                <label class="form-label small fw-semibold">Query Type</label>
                <select name="type" class="form-select form-select-sm" required>
                  <option value="">Select</option>
                  <option value="admission">Admission related</option>
                  <option value="application-status">Application status</option>
                  <option value="technical">Technical issue</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="col-12">
                <label class="form-label small fw-semibold">Message</label>
                <textarea name="message" rows="4" class="form-control form-control-sm" placeholder="Type your message here..." required></textarea>
              </div>

              <div class="col-12 mt-2">
                <button type="submit" class="btn btn-primary btn-sm px-4">
                  Submit Message
                </button>
              </div>
            </div>
          </form>

          <p class="text-muted small mt-3 mb-0">
            Note: This is a demo portal. In a real deployment, messages would be routed
            to the official admission team via email or ticketing system.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

