<%- include("header.ejs") %>

<section class="forgot-hero d-flex align-items-center justify-content-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card forgot-card shadow-sm">
          <div class="card-body p-4">
            <div class="text-center mb-3">
              <i class="fa fa-lock fa-3x mb-2" style="color: #fbbf24;"></i>
              <h3 class="fw-bold mb-1" style="color:#0f172a;">Forgot Password?</h3>
              <p class="text-muted mb-0 small">
                Enter the email address associated with your account.
              </p>
            </div>

            <!-- Flash messages (optional) -->
            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger py-2 small">
                <%= error %>
              </div>
            <% } %>
            <% if (typeof success !== 'undefined') { %>
              <div class="alert alert-success py-2 small">
                <%= success %>
              </div>
            <% } %>

            <form action="/forgot-password" method="post">
              <div class="mb-3">
                <label for="email" class="form-label small fw-semibold">Email address</label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  class="form-control"
                  placeholder="Enter your registered email"
                  required
                >
              </div>

              <button type="submit" class="btn btn-primary w-100 mt-2">
                Send reset link
              </button>

              <div class="text-center mt-3">
                <a href="/login" class="small text-decoration-none">
                  Back to login
                </a>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("footer.ejs") %>
